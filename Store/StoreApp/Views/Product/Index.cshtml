@model IQueryable<Product>

    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
        </div>
        <div class="col-md-9">
            <div class="row my-3">
            @foreach (var product in Model)
            {

                <partial name="_ProductCard" model="@product" />

            }
            </div>
        </div>

    </div>

